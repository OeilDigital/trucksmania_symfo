{% extends 'basecustomer.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Formulaire d'enregistrement</h3>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>


        {% endfor %}
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                {{ last_name }} 
                {{ form_widget(form.last_name,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                {{ first_name }} 
                {{ form_widget(form.first_name,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                {{ phone_number }}
                {{ form_widget(form.phone_number,{'attr':{'class':'form-control'}}) }}
                </div>
                <br>

                <div class="form-group">
                <button class="btn btn-success mt-5 mb-5">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}