{% extends 'base.html.twig' %}

{% block title %}Trucksmania{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        ul { list-style-type:none; }
        #productList li { font-family: 'Cedarville Cursive', cursive; }
        #productList li:first-child { color: white; font-size: 1.8em; display:inline; }
        #productList li:nth-child(2) { color: white; font-size: 1.3em; }
        .card { border-radius: 25px; margin-bottom: 1vh; }
        .card-img-top { border-top-left-radius: 25px; border-top-right-radius: 25px; }
        .card-body { background-color: #202225; border-bottom-left-radius: 25px; border-bottom-right-radius: 25px; }
        .card-body p:first-child { font-family: 'Cedarville Cursive', cursive; color:white;font-size: 2.5em; }
        h2 { font-family: 'Cedarville Cursive', cursive; color:white }
        h3 { font-family: 'Cedarville Cursive', cursive; color:white }
    </style>

    <div class="example-wrapper d-flex justify-content-center">
        <h1>{{ truck[0]['name_truck'] }}</h1>
    </div>


    <div class="d-flex justify-content-around flex-wrap">
        <div class="card" style="width: 50vw;">
            <img src="/logo_foodtruck.JPG" class="card-img-top" alt="logo du foodtruck"/>
            <div class="card-body">
                <p class="d-flex justify-content-center">{{ truck[0]['name_truck'] }}</p>
                <h3 class="d-flex justify-content-center">{{ truck[0]['style'] }}</h3>
                {% if boissons == true %}
                    <br>
                    <h3>Boissons</h3>
                    {% for boisson in boissons %}
                        <ul id="productList">
                           <li>{{ boisson['product_name'] }} - {{ boisson['price'] }}€</li>
                           <li>{{ boisson['description'] }}</li>
                        </ul>
                    {% endfor %}
                {% endif %}
                {% if sandwiches == true %}
                    <br>
                    <h3>Sandwichs</h3>
                    {% for sandwich in sandwiches %}
                        <ul id="productList">
                           <li>{{ sandwich['product_name'] }} - {{ sandwich['price'] }}€</li>
                           <li>{{ sandwich['description'] }}</li>
                        </ul>
                    {% endfor %}
                {% endif %}
                {% if kebabs == true %}
                    <br>
                    <h3>Kebabs</h3>
                    {% for kebab in kebabs %}
                        <ul id="productList">
                           <li>{{ kebab['product_name'] }} - {{ kebab['price'] }}€</li>
                           <li>{{ kebab['description'] }}</li>
                        </ul>
                    {% endfor %}
                {% endif %}
                {% if specialites == true %}
                    <br>
                    <h3>Spécialités</h3>
                    {% for specialite in specialites %}
                        <ul id="productList">
                           <li>{{ specialite['product_name'] }} - {{ specialite['price'] }}€</li>
                           <li>{{ specialite['description'] }}</li>
                        </ul>
                    {% endfor %}
                {% endif %}
                {% if menus == true %}
                    <br>                
                    <h3>Menus</h3>
                    {% for menu in menus %}
                        <ul id="productList">
                           <li>{{ menu['product_name'] }} - {{ menu['price'] }}€</li>
                           <li>{{ menu['description'] }}</li>
                        </ul>
                    {% endfor %}
                {% endif %}
                <br>
                <h2 class="d-flex justify-content-center">{{ truck[0]['phone_number'] }}</h2>
            </div>
        </div>
    </div>
{% endblock %}