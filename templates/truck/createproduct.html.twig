{% extends 'basetruck.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <h3 class="mt-5 mb-5">Enregistrement de produit</h3>
        {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
                {{ message }}
            </div>


        {% endfor %}
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
                <div class="form-group">
                {{ product_name }} 
                {{ form_widget(form.product_name,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                {{ type }}
                {{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                {{ price }}
                {{ form_widget(form.price,{'attr':{'class':'form-control'}}) }}
                </div>
                {# <div class="form-group">
                {{ password }}
                {{ form_widget(form.password,{'attr':{'class':'form-control'}}) }}
                </div>
                <div class="form-group">
                {{ email }}
                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                </div> #}
                <div class="form-group">
                {{ description }}
                {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}
                </div>
                <br>
                {# <div class="form-group">
                <h5>Veuillez confirmer votre email</h5>
                {{ email }}
                {{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
                </div> #}
                <div class="form-group">
                <button class="btn btn-success mt-5 mb-5">Enregistrer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}